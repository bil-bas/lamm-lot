#:kivy 2.3.1

#:import Pluralizer pluralizer.Pluralizer
#:set p Pluralizer()

#:include lammlot/kv/search_screen.kv
#:include lammlot/kv/sticker_screen.kv
#:include lammlot/kv/sticker_sheet_screen.kv


<CloseButton@Button>:
    pos_hint: {'top': 1, 'right': 1}
    size_hint: None, 0.05
    text: 'Close'


<Dialog@Popup>:
    auto_dismiss: False
    size_hint: None, None


<SavedDialog@Dialog>:
    size: 300, 200
    title: "Saved!"
    num_saved: 0

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: f"Saved {p.pluralize('sticker', root.num_saved, True)}."
        Button:
            text: "Close"
            on_release: root.dismiss()
