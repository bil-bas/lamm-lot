<MainWindow>:
    id: main_window
    cols: 1
    padding: 16
    spacing: 60
    orientation: 'vertical'

    MDBoxLayout:
        size_hint: 1, 0.05
        spacing: 16

        MDLabel:
            text: 'Location'

        MDDropDownItem
            id: site_picker
            on_release: main_window.open_site_menu(self)

        MDTextButton:
            text: 'Refresh'
            on_release: main_window.refresh_sites()

    MDBoxLayout:
        size_hint: 1, 0.05
        spacing: 16

        MDLabel:
            text: 'Item'

        MDTextField:
            id: search

        MDTextButton:
            text: 'Search'
            on_release: main_window.refresh_items()

    MDScrollView:
        MDList:
            id: item_list
