<SearchResult>:
    canvas.before:
        Color:
            rgba: (0.0, 0.9, 0.1, 0.3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size


<MainWindow>:
    id: main_window
    cols: 1
    padding: 16
    spacing: 60
    orientation: 'vertical'

    BoxLayout:
        size_hint: 1, 0.05
        spacing: 16

        Label:
            text: 'Location'

        DropDown
            id: site_picker
            #on_release: main_window.open_site_menu(self)

        Label:
            text: ''

    BoxLayout:
        size_hint: 1, 0.05
        spacing: 16

        Label:
            text: 'item'

        TextInput:
            id: search

        Button:
            text: 'Search'
            #on_press: main_window.refresh_items()

    SearchResults:
        view_class: 'SearchResult'
        SelectableRecycleBoxLayout:
            id: item_list
            orientation: 'vertical'
            size_hint_y: None
            multiselect: True
            touch_multiselect: True


