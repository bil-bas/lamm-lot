#:kivy 2.3.1


<SettingsScreen>:
    name: "settings"

    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 30

        Label:
            text: "Settings"
            size_hint: None, 0.05

        BoxLayout:
            orientation: 'vertical'
            spacing: 10

            Label:
                text: 'Lend-Engine site URL'
                text_size: self.size
                size_hint_y: None
                height: 32
                valign: 'top'
                halign: 'left'

            TextInput:
                id: site_url
                size_hint_y: None
                height: 80

        BoxLayout:
            orientation: 'vertical'
            spacing: 10

            Label:
                text: 'Image Host URL'
                text_size: self.size
                size_hint_y: None
                height: 32
                valign: 'top'
                halign: 'left'

            TextInput:
                id: image_url
                size_hint_y: None
                height: 80

        BoxLayout:
            orientation: 'vertical'
            spacing: 10

            Label:
                text: 'Lend-Engine SECRET Token'
                text_size: self.size
                size_hint_y: None
                height: 32
                valign: 'top'
                halign: 'left'

            TextInput:
                id: secret_token

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, 0.1

            Button:
                text: "Save"
                size_hint_x: None
                width: 200
                on_press: root.save()

            Button:
                text: "Close"
                size_hint_x: None
                width: 200
                on_press: root.manager.current = "home"
